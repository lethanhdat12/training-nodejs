<%- include('./views/partials/header.ejs') %>
  <!-- hiển thị tất cả thành viên của đội bóng -->
  <% if(user && user.length> 0) {%>
    <table class="table">
      <thead>
        <tr>
          <th scope="col">Stt</th>
          <th scope="col">Tên thành viên</th>
          <th scope="col">Tuổi</th>
          <th scope="col">Ảnh</th>
          <th scope="col">Vị trí thi đấu</th>
          <th scope="col">Action</th>
        </tr>
      </thead>
      <tbody>
        <% user.forEach( (value,index)=>{ %>
          <tr>
            <th scope="row">
              <%= index + 1 %>
            </th>
            <td>
              <%= value['name'] %>
            </td>
            <td>
              <%= value['old'] %>
            </td>
            <td>
              <img style="width : 50px ; height : 50px" src="./img/<%= value['img'] %>" alt="">
            </td>
            <td>
              <%= value['vitri'] %>
            </td>
            <td>
              <a href="/Edit/<%= value['id']%>" class="btn btn-warning">Edit</a>
              <a href="/Delete/<%= value['id']%>" class="btn btn-danger">Xóa</a>
            </td>
          </tr>

          <% } ) %>

      </tbody>
    </table>
    <% } else { %>
      <h1>Không có dữ liệu</h1>
      <% } %>
        </div>
        </body>
        </html>
        